import java.util.Scanner;

public class TPO1Ex02 {
    public static void main(String[] args) {
        // Nayara Pereira Soares
        // Exercício 2: Calcular e exibir a área de um quadrado, a partir do valor de sua aresta que será digitado.

        Scanner scanner = new Scanner(System.in);

        System.out.print("Digite o valor da aresta do quadrado: ");
        double aresta = scanner.nextDouble();

        double area = aresta * aresta;

        System.out.println("A área do quadrado é: " + area);

        scanner.close();
    }
}
